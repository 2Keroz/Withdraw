{% extends "../layouts/base.twig" %}

{% block main %}
<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="bg-white p-10 rounded-lg shadow-lg w-full max-w-sm">
        <h1 class="text-2xl font-semibold text-center text-gray-800 mb-6">Réinitialiser mot de passe</h1>
        <form action="/mot-de-passe-oublie" method="POST">
            <div class="mb-6">
                <label for="email" class="block text-gray-700 mb-2">Entrez votre adresse email :</label>
                <input type="email" name="email" id="email" placeholder="Email"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-600" required>
            </div>

            <div>
                <button type="submit" 
                    class="w-full bg-red-600 text-white py-2 rounded-lg hover:bg-red-700 cursor-pointer">
                    Réinitialiser mot de passe
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
