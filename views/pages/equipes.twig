{% extends "../layouts/base.twig" %}

{% block main %}
    <div>
        <div>
            <div>
                <div>
                    <h1>Liste des Équipes</h1>
                    <div>
                        <table>
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nom</th>
                                    <th>Acronyme</th>
                                    <th>Jeu</th>
                                    <th>Compétition</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for equipe in equipes %}
                                    <tr>
                                        <td>{{ equipe.id }}</td>
                                        <td>{{ equipe.nom }}</td>
                                        <td>{{ equipe.acronyme }}</td>
                                        <td>{{ equipe.jeu.nom }}</td>
                                        <td>{{ equipe.competition.nom }}</td>
                                        <td>
                                            <form action="/admin/equipe/{{ equipe.id }}/supprimer" method="POST" style="display:inline;">
                                                <button type="submit" class="btn btn-danger">Supprimer</button>
                                            </form>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
