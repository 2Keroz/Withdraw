{% extends "../layouts/base.twig" %}

{% block main %}
<div class="min-h-screen bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-lg mx-auto bg-white rounded-lg shadow-lg overflow-hidden p-8">
        <h1 class="text-2xl font-semibold text-center text-gray-800 mb-6">Créer un Jeu</h1>
        <form action="/admin/jeu/creer" method="POST">
            <div class="mb-4">
                <label for="nom" class="block text-sm font-medium text-gray-700">Nom du jeu</label>
                <input type="text" name="nom" id="nom" required class="mt-1 border border-gray-300 rounded-lg py-2 px-4 w-full">
            </div>
            <div class="mb-4">
                <label for="description" class="block text-sm font-medium text-gray-700">Description</label>
                <textarea name="description" id="description" required class="mt-1 border border-gray-300 rounded-lg py-2 px-4 w-full"></textarea>
            </div>
            <div class="text-center">
                <button type="submit" class="bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition duration-300">Créer Jeu</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
