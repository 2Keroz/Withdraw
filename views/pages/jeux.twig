{% extends "../layouts/base.twig" %}
{% block main %}
	<main class="min-h-screen bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
		<div
			class="max-w-7xl mx-auto">
			<div class="mb-8 md:flex md:items-center md:justify-between">
				<div class="flex-1 min-w-0">
					<h1 class="text-3xl font-bold leading-tight text-gray-900 sm:text-4xl">
						Liste des Jeux
					</h1>
				</div>
				<div class="mt-4 flex md:mt-0 md:ml-4">
					<a href="/admin/jeu/creer" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition duration-200">
						<svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewbox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
						</svg>
						Nouveau Jeu
					</a>
				</div>
			</div>
			<div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
				{% for jeu in jeux %}
					<div class="bg-white overflow-hidden shadow-lg rounded-xl hover:shadow-xl transition duration-200">
						<div class="p-6">
							<div class="flex items-center">
								<div class="flex-shrink-0">
									<div class="h-12 w-12 bg-red-100 rounded-lg flex items-center justify-center">
										<svg class="h-6 w-6 text-red-600" fill="none" stroke="currentColor" viewbox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"/>
										</svg>
									</div>
								</div>
								<div class="ml-4">
									<h2 class="text-xl font-bold text-gray-900">
										{{ jeu.nom }}
									</h2>
								</div>
							</div>
							<div class="mt-4">
								<p class="text-gray-600">
									{{ jeu.description }}
								</p>
							</div>

							<div class="mt-6 flex justify-between items-center">
								<div class="flex space-x-2">
									<a href="/admin/jeu/{{ jeu.id }}/modifier" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-blue-600 bg-blue-100 hover:bg-blue-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-200">
										<svg class="h-4 w-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
										</svg>
										Modifier
									</a>
									<form action="/admin/jeu/{{ jeu.id }}/supprimer" method="POST" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce jeu ? Cette action supprimera également toutes les compétitions et équipes associées.');">
										<button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-red-600 bg-red-100 hover:bg-red-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition duration-200">
											<svg class="h-4 w-4 mr-1.5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
											</svg>
											Supprimer
										</button>
									</form>
								</div>
							</div>
						</div>
					</div>
				{% else %}
					<div class="col-span-full">
						<div class="text-center py-12 bg-white rounded-xl shadow">
							<svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewbox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"/>
							</svg>
							<h3 class="mt-2 text-sm font-medium text-gray-900">Aucun jeu</h3>
							<p class="mt-1 text-sm text-gray-500">Commencez par créer un nouveau jeu.</p>
							<div class="mt-6">
								<a href="/admin/jeu/creer" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700">
									<svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewbox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
									</svg>
									Nouveau Jeu
								</a>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</main>
{% endblock %}
