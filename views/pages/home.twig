{% extends "../layouts/base.twig" %}

{% block style %}
<link href="/css/home.css" rel="stylesheet">
{% endblock %}

{% block main %}
<main>
    <section>
        <div id="left-column">
            <article>
                <h1>Bienvenue, {{ utilisateur.prenom }} {{ utilisateur.nom }}</h1>
                <p>Vos points actuels : <span>{{ utilisateur.points }}</span></p>
                <nav>
                    <a href="/profil">Mon profil</a>
                    {% if utilisateur.role == 'ADMIN' %}
                        <a href="/admin">Accéder à l'administration</a>
                    {% endif %}
                    <form action="/home/deconnexion" method="POST">
                        <button type="submit">Déconnexion</button>
                    </form>
                    <a href="/mes-paris">Mes Paris</a>
                </nav>
            </article>

            <article>
                <h2>Jeux et Compétitions</h2>
                <ul id="jeux-list">
                    {% for jeu in jeux %}
                        <li>
                            <a href="#" onclick="loadCompetitions({{ jeu.id }})">{{ jeu.nom }}</a>
                            <ul id="competitions-{{ jeu.id }}" style="display: none;"></ul>
                        </li>
                    {% endfor %}
                </ul>
            </article>
        </div>

        <div id="right-column">
            <article>
                <h2>Matchs à venir</h2>
                <div id="matchs-container">
                    {% if matchsAvenir is not empty %}
                        <ul>
                            {% for match in matchsAvenir %}
                                <li>
                                    <h3>{{ match.equipe1.nom }} vs {{ match.equipe2.nom }}</h3>
                                    <p>Date : {{ match.date | date("d/m/Y") }} à {{ match.date | date("H:i") }}</p>
                                    <div>
                                        <button onclick="openBetModal({{ match.id }}, '{{ match.equipe1.nom }}', {{ utilisateur.points }})">Parier sur {{ match.equipe1.nom }}</button>
                                        <button onclick="openBetModal({{ match.id }}, '{{ match.equipe2.nom }}', {{ utilisateur.points }})">Parier sur {{ match.equipe2.nom }}</button>
                                    </div>
                                </li>
                            {% endfor %}
                    <div id="betModal">
                        <div >
                            <div>
                                <div>
                                    <h2 id="modalMatchTitle">Pari</h2>
                                    <form action="/parier" method="POST">
                                        <p id="errorBet"></p>
                                        <input type="hidden" name="match_id" id="modalMatchId">
                                        <input type="hidden" name="equipe_choisie" id="modalEquipeChoisie">
                                        <label for="pointsMises" >Points à parier :</label>
                                        <input type="number" name="points_mises" id="pointsMises">
                                        <div>
                                            <button type="submit" >Valider</button>
                                            <button type="button" onclick="closeBetModal()">Annuler</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                        </ul>
                    {% else %}
                        <p>Aucun match à venir pour le moment.</p>
                    {% endif %}
                </div>
            </article>
            <article>
                <h2>Matchs passés</h2>
                <div id="matchs-passes-container">
                </div>
            </article>
        </div>
    </section>
</main>
{% endblock %}

{% block script %}

{% if utilisateur and utilisateur.points is defined %}
    <script>
        let userPoints = {{ utilisateur.points }};
    </script>
{% else %}
    <script>
        let userPoints = 0;
    </script>
{% endif %}
    <script src="/js/script.js"></script>
{% endblock %}
