{% extends "../layouts/base.twig" %}

{% block main %}
    <div>
        <div>
            <h1>Modifier le Match</h1>
            <form action="/admin/match/{{ match.id }}/modifier" method="POST">
                <!-- Sélection du jeu -->
                <div>
                    <label for="jeuId">Jeu</label>
                    <select name="jeuId" id="jeuId" required onchange="filtrerCompetitions()">
                        <option value="">-- Sélectionnez un jeu --</option>
                        {% for jeu in jeux %}
                            <option value="{{ jeu.id }}" {% if jeu.id == match.jeuId %}selected{% endif %}>{{ jeu.nom }}</option>
                        {% endfor %}
                    </select>
                </div>

                <!-- Sélection de la compétition -->
                <div>
                    <label for="competitionId">Compétition</label>
                    <select name="competitionId" id="competitionId" required onchange="filtrerEquipes()">
                        <option value="">-- Sélectionnez une compétition --</option>
                        {% for jeuId, competitions in competitionsByJeu %}
                            <optgroup label="Jeu ID: {{ jeuId }}">
                                {% for competition in competitions %}
                                    <option value="{{ competition.id }}" {% if competition.id == match.competitionId %}selected{% endif %}>{{ competition.nom }}</option>
                                {% endfor %}
                            </optgroup>
                        {% endfor %}
                    </select>
                </div>

                <!-- Sélection des équipes -->
                <div>
                    <label for="equipe1Id">Équipe 1</label>
                    <select name="equipe1Id" id="equipe1Id" required>
                        <option value="">-- Sélectionnez l'équipe 1 --</option>
                    </select>
                </div>

                <div>
                    <label for="equipe2Id">Équipe 2</label>
                    <select name="equipe2Id" id="equipe2Id" required>
                        <option value="">-- Sélectionnez l'équipe 2 --</option>
                    </select>
                </div>

                <!-- Champ pour la date et l'heure -->
                <div>
                    <label for="date">Date et Heure</label>
                    <input type="datetime-local" name="date" id="date" value="{{ match.date|date('Y-m-d\TH:i') }}" required>
                </div>

                <div>
                    <button type="submit">Modifier le Match</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

{% block script %}
<script src="/js/script.js"></script>
    <script>
        const competitionsByJeu = {{ competitionsByJeu|json_encode()|raw }};
        const matchJeuId = {{ match.jeuId }};
        const matchCompetitionId = {{ match.competitionId }};
        const equipe1Id = {{ match.equipe1Id }};
        const equipe2Id = {{ match.equipe2Id }};
    </script>
{% endblock %}