{% extends "../layouts/base.twig" %}

{% block main %}
	<div class="min-h-screen bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
		<div class="max-w-3xl mx-auto bg-white p-8 rounded-lg shadow">
			<h1 class="text-2xl font-semibold text-center text-gray-800 mb-6">Créer une Équipe</h1>
			<form
				action="/admin/equipe/creer" method="POST">
				<!-- Champ pour le nom de l'équipe -->
				<div class="mb-4">
					<label for="nom" class="block text-sm font-medium text-gray-700">Nom de l'équipe</label>
					<input type="text" name="nom" id="nom" class="mt-1 block w-full border border-gray-300 rounded-lg py-2 px-4" required>
				</div>

				<!-- Champ pour l'acronyme de l'équipe -->
				<div class="mb-4">
					<label for="acronyme" class="block text-sm font-medium text-gray-700">Acronyme de l'équipe</label>
					<input type="text" name="acronyme" id="acronyme" class="mt-1 block w-full border border-gray-300 rounded-lg py-2 px-4" required>
				</div>

				<!-- Sélection du jeu -->
				<div class="mb-4">
					<label for="jeuId" class="block text-sm font-medium text-gray-700">Jeu</label>
					<select name="jeuId" id="jeuId" class="mt-1 block w-full border border-gray-300 rounded-lg py-2 px-4" required onchange="filtrerCompetitions()">
						<option value="">-- Sélectionnez un jeu --</option>
						{% for jeu in jeux %}
							<option value="{{ jeu.id }}">{{ jeu.nom }}</option>
						{% endfor %}
					</select>
				</div>

				<!-- Sélection de la compétition -->
				<div class="mb-4">
					<label for="competitionId" class="block text-sm font-medium text-gray-700">Compétition</label>
					<select name="competitionId" id="competitionId" class="mt-1 block w-full border border-gray-300 rounded-lg py-2 px-4" required>
						<option value="">-- Sélectionnez une compétition --</option>
					</select>
				</div>
				<div class="text-center">
					<button type="submit" class="bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition duration-300">Créer l'équipe</button>
				</div>
			</form>
		</div>
	</div>

	<script>
		const competitionsByJeu = {{ competitionsByJeu|json_encode()|raw }};
console.log("Compétitions par jeu:", competitionsByJeu);

function filtrerCompetitions() {
const jeuId = document.getElementById("jeuId").value;
const competitionSelect = document.getElementById("competitionId");

// Vider les options actuelles
competitionSelect.innerHTML = '<option value="">-- Sélectionnez une compétition --</option>';

if (competitionsByJeu && competitionsByJeu[jeuId]) {
competitionsByJeu[jeuId].forEach(competition => {
const option = document.createElement('option');
option.value = competition.id;
option.textContent = competition.nom;
competitionSelect.appendChild(option);
});
}
}

document.addEventListener('DOMContentLoaded', filtrerCompetitions);
document.getElementById("jeuId").addEventListener('change', filtrerCompetitions);
	</script>

{% endblock %}
