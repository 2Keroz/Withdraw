{% extends "../layouts/base.twig" %}
{% block title %}WithDraw | Inscription
{% endblock %}
{% block main %}
<main class="min-h-screen bg-gray-100 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8 bg-white p-10 rounded-xl shadow-lg">
        <div>
            <h1 class="mt-6 text-center text-3xl font-extrabold text-gray-900">S'inscrire</h1>
        </div>
        <form action="/register" method="POST" id="registerForm" class="mt-8 space-y-6">
            <div class="rounded-md shadow-sm space-y-4">
                <div>
                    <input id="nom" type="text" name="nom" placeholder="Nom" 
                        class="appearance-none rounded-lg relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-red-500 focus:border-red-500 focus:z-10 sm:text-sm">
                </div>
                <div>
                    <input id="prenom" type="text" name="prenom" placeholder="Prénom" 
                        class="appearance-none rounded-lg relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-red-500 focus:border-red-500 focus:z-10 sm:text-sm">
                    
                </div>
                <div>
                    <input id="birth" type="date" name="date" placeholder="Date de naissance" 
                        class="appearance-none rounded-lg relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-red-500 focus:border-red-500 focus:z-10 sm:text-sm">
                </div>
                <div>
                    <input id="mail" type="email" name="mail" placeholder="Email" 
                        class="appearance-none rounded-lg relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-red-500 focus:border-red-500 focus:z-10 sm:text-sm">
                </div>
                <div>
                    <input id="password" type="password" name="password" placeholder="Mot de passe" 
                        class="appearance-none rounded-lg relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-red-500 focus:border-red-500 focus:z-10 sm:text-sm">
                </div>
                <div>
                    <input id="confirm_password" type="password" name="confirm_password" placeholder="Confirmer le mot de passe" 
                        class="appearance-none rounded-lg relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-red-500 focus:border-red-500 focus:z-10 sm:text-sm">
                </div>
            </div>

            {% if errors.password %}
                <div class="text-red-500 text-sm text-center">{{ errors.password }}</div>
            {% endif %}
            {% if errors.mail %}
                <div class="text-red-500 text-sm text-center">{{ errors.mail}}</div>
            {% endif %}
            {% if errors.server %}
                <div class="text-red-500 text-sm text-center">{{ errors.server }}</div>
            {% endif %}
            {% if errors.prenom %}
                        <div class="text-red-500 text-sm text-center">{{ errors.prenom }}</div>
            {% endif %}
            {% if errors.nom %}
                        <div class="text-red-500 text-sm text-center">{{ errors.nom }}</div>
            {% endif %}

            <div>
                <button type="submit"
                    class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                    S'inscrire
                </button>
            </div>
        </form>
        <div class="text-center">
            <p class="text-sm text-gray-600">
                Déjà inscrit ?
                <a href="/login" class="font-medium text-red-600 hover:text-red-500">
                    Connectez-vous ici
                </a>
            </p>
        </div>
    </div>
</main>
{% endblock %}
{% block script %}
    <script src="/js/script.js"></script>
{% endblock %}
